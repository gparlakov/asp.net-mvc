@{
    ViewBag.Title = "Moto Home Page";
}
<div class="container-fluid">
    <div class="hero-unit">
        <h1>Moto</h1>
    </div>

    <div class="row-fluid">
        <div class="span4">
            <a href="~/moto/enduro">
                <img src="../img/index/enduro-tourist.jpg" alt="Enduro tourer" title="Enduro tourists" />
            </a>
        </div>
        <div class="span4">
            <a href="~/moto/sport">
                <img src="../img/index/sport.jpg" alt="Sport" title="Enduro tourists" />
            </a>
        </div>
        <div class="span4">
            <a href="~/moto/tourer">
                <img src="../img/index/tourist.jpg" alt="Road tourer" title="Road tourists" />
            </a>
        </div>
    </div>

    @section Forums{
        @Html.Partial("_ForumsPartial")
    }
</div>
