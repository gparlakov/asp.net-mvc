@{
    ViewBag.Title = "Home Page";
}

<div class="hero-unit">
    <h1>
        <img src="~/img/binaryIcon.png" />
        BitCalculator
    </h1>
</div>
<div class="row">
    <div class="span4">
        <h2>Getting started</h2>
        <div>
            @using (Ajax.BeginForm("Calculate", new AjaxOptions
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "result",
            }))
            {
                <input id="number" name="number" type="number" value="1"/>
                <select id="unit" name="unit">
                    <option value="0">Bit</option>
                    <option value="1">Byte</option>
                    <option value="2">KiloBit</option>
                </select>
                <input type="submit" />
            }
        </div>
        <p id="result"></p>
